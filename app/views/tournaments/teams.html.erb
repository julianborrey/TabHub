<% provide(:title,  @tournament.name + " - Teams") %>

<div class="row-fluid tournament-page">
   
   <%= render('tournaments/title_shim'); %>
   
   <div class="tableTitle">
      <h1>Teams</h1>
      <a href="<%= tournament_path(@tournament) + '/control'%>">back to control panel</a>
      <span style="margin-left:50px"># Teams: <%= @tournament.teams.count %></span>
      <br><br>
   </div>
   
   <table class="table attendeeTable">
      <%= render('tournaments/teams/team_form_row'); %>
      
      <tr class="titlesRow">
         <td>Institution</td>
         <td>Name</td>
         
         <% @n ||= GlobalConstants::FORMAT[:bp][:num_speakers_per_team]; %>
         <% (1..@n).each { |i| %>
            <td>Member <%= i %></td>
         <% } %>
         
         <td>Points</td>
         <td>Total Speaker Points</td>
         <td><!--  edit  --></td>
         <td><!-- remove --></td>
      </tr>
      
      <%= render('tournaments/teams/team_rows'); %>
   </table>
</div>
