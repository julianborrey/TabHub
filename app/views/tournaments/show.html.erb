<% provide(:title,  @tournament.name) %>

<div class="row-fluid tournament-page">
   
   <%= render('tournaments/title_shim'); %>
   
   <% if @user.in_tab_room?(@tournament) %>  
      <div class="row-fluid ctrl-btn-row">
         <%= link_to "Tournament Control Panel", (tournament_path(@tournament) + "/control"),
             class: "btn btn-warning" %>
      </div>
   <% end %>
   
   <%= render('tournaments/status_bar'); %>
   
   <div class="row-fluid">
      <div class="span2">
         <%= render('tournaments/sidebar'); %>
      </div>
      
      <div class="span10">
         <% @current_round = @tournament.current_round %>
         <% if !@current_round.nil? %>
            <%= render('tournaments/current_round'); %>
         <% end %>
      
         <% if !@user.nil? && !@tournament.debater_stats(@user).empty? %>
            <%= render('tournaments/user_stats'); %>
         <% end %>
         
         <%= render('tournaments/tournament_info'); %>   
      </div>
   </div>
   
</div>
