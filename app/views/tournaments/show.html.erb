<% provide(:title,  @tournament.name) %>

<div class="row-fluid tournament-page">
   
   <div class="row-fluid tournament-header">
      <div class="span9">
         <div class=tournament-name>
            <%= @tournament.name %>
         </div>
      </div>
      <div class="span3">
         <!-- tournament logo -->
      </div>
   </div>
   
   <% if @tournament.is_authorized?(@user) %>  
      <div class="row-fluid ctrl-btn-row">
         <%= link_to "Tournament Control Panel", (tournament_path(@tournament) + "/control"),
             class: "btn btn-warning" %>
      </div>
   <% end %>
   
   <%= render('tournaments/status_bar'); %>
   
   <%= render('tournaments/tournament_info'); %>   
   
   
</div>
