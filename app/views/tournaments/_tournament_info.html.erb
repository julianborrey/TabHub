<div class="row-fluid tournament-info">
   <table class="table infoTable">
       <col width="100px">
       <col width="300px">
       <col width="100px">
       <col width="300px">

      <thead><tr>
         <td class="info-name">Hosted by:</td>
         <td class="info-value midCol">
            <a href="<%= institution_path(@tournament.institution)%>">
            <%= @tournament.get_host_name %></a>
         </td>

         <td class="info-name">Location:</td>
         <td class="info-value"><%= @tournament.location %></td>
      </tr></thead>

      <tr>
         <td class="info-name">Region:</td>
         <td class="info-value"><%= GlobalConstants::TOURNAMENT_REGIONS_STR[@tournament.region].to_s.titleize %></td>
        
        <!-- we will get there...
        <td class="info-name">Format:</td>
         <td class="info-value midCol">
            <a href="#linkToFormatrules">British Parliamentary</a>
         </td>
         -->
         <td class="info-name">Rounds:</td>
         <td class="info-value"><%= @tournament.get_num_rounds %></td>
      </tr>
      
      <tr>
         <td class="info-name">Start Time:</td>
         <td class="info-value midCol"><%= @tournament.start_time %></td>
         <td class="info-name">End Time:</td>
         <td class="info-value"><%= @tournament.end_time %></td>
      </tr>
   </table>
   
   <div class="remarksBox">
      <p><b>Information:</b></p>
      <%= simple_format(@tournament.remarks) %>
   </div>
</div>
