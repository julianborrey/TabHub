<% if signed_in? %>

<div class="row-fluid">
   
   <div class="span3" id="user-col">
      
      <span class="user-name-bar"><%= "#{current_user.fname} #{current_user.lname}" %></span>
      <br><br><br><br>

      <!-- photo -->
        
      <table class="table">
         <tr>
            <td><span class="stat-name">Currently at:</span></td>
            <td><span class="stat-value">UNSW IV</span></td>
         </tr>
         
         <tr class="last-row">
            <td><span class="stat-name">Representing:</td>
            <td><span class="stat-value">Lennon &amp Assange</td>
         </tr>
      </table>
      <br><br>

      <div class="btn-group">
         <button type="button" class="btn btn-default">Profile</button>
         <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
         </button>
         
         <ul class="dropdown-menu">
            <li><%= link_to "Edit", root_path %></li>
            <li><%= link_to "Sign Out", root_path %></li>
         </ul>
      </div>
      
   </div>
   
   <div class="span9" style="padding-left:60px">
      <% if in_tournament? %>
         <% if round_now? %>
            <%= render('layouts/upcoming'); %>
         <% else %>
            <%= render('layouts/current_round'); %>
         <% end %>
      <% end %>
      <%= render('static_pages/buttons_and_feed') %>
   </div>
</div>


<% else %>


<div class="row">
   <br>
   <h1>TabHub</h1>
   
   <p class="lead" id="info-lines">
      Fully online debating tabbing platform.<br>
      Complete records and total optimization.
   </p>
</div>

<br>
<br>

<div class="row-fluid">
  
   <div class="span6" style="padding-right:60px">
      <table class="table table-bordered">
         <%= form_for(:session, url: sessions_path) do |f| %>

         <tr>
            <td>
               <%= f.text_field(:email, {placeholder: "E-mail"}); %>
               <!-- <input type="text" placeholder="E-mail"> -->
            </td>
         </tr>
         
         <tr>
            <td>
               <%= f.password_field(:password, {placeholder: "Password"}); %>
               <!-- <input type="password" placeholder="Password"> -->
            </td>
         </tr>

         <tr>
            <td>
               <%= f.submit("Sign In", {class: "btn btn-primary btn-lg btn-block"}); %>  
               <!-- <button type="button" class="btn btn-primary btn-lg btn-block">
                  Sign In
               </button> -->
            </td>
         </tr>
         <% end %>

         <tr>
            <th>
               <a href="#">Forgot my password</a>
               <a href="<%= signup_path %>" style="float:right">Sign Up</a>
            </th>
         </tr>
     
      </table>
   </div>

   <div class="span6">
      <%= render('static_pages/recent_topics'); %>
   </div>
   
</div>

<% end %>

