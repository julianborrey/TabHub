<% provide(:title, "Log in"); %>

<div class="info-page signup-page">

	<h2>Log in</h2>
	<br>

	<% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
   <% end %>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		
	   <div class="input-prepend">
			<span class="add-on">E-mail</span>
			<%= f.email_field(:email, {class: "span2"}); %>
		</div>

		<div class="input-prepend">
			<span class="add-on">Password</span>
			<%= f.password_field(:password, {class: "span2"}); %>
		</div>

	  
	 <% if devise_mapping.rememberable? -%>
	   <div>
			<span>Remember me - </span>
			<span><%= f.check_box(:remember_me); %></span>
		</div><br><br>
	 <% end -%>

	  <div><%= f.submit("Sign In", {class: "btn btn-primary btn-lg btn-block", 
	  	           style: "width:350px;margin-left:auto;margin-right:auto;"}); %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>