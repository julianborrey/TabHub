<% provide(:title, "Forgot password"); %>

<div class="info-page signup-page">

	<h2>Forgot your password?</h2>
	<br>

	<% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
   <% end %>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

	   <div class="input-prepend">
			<span class="add-on">E-mail</span>
			<%= f.email_field(:email, {class: "span2"}); %>
		</div>
		<br><br>

	  <div><%= f.submit("Send me reset password instructions", {class: "btn btn-primary btn-lg btn-block", 
	  	           style: "width:350px;margin-left:auto;margin-right:auto;"}); %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>