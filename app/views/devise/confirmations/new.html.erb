<div class="info-page signup-page">


<h2>Resend confirmation E-mail</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
   <%= devise_error_messages! %>

   <br>
   <div class="input-prepend">
	   <span class="add-on">E-mail</span>
	   <%= f.email_field(:email, {class: "span2"}); %>
   </div>

   <br><br>
   <div><%= f.submit "Resend Confirmation E-mail", {class: "btn btn-primary create-account-btn"} %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
